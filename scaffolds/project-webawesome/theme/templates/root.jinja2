{% extends 'master.jinja2' %}

{% block main %}

{# Hero Section #}
<section class="hero">
    <div class="hero-image">
        <img src="/assets/images/hero.png" alt="[[ scaffold.project_name ]] - Team collaboration">
    </div>
    <div class="hero-content wa-stack wa-gap-l wa-align-items-center">
        <span class="hero-label">Welcome to [[ scaffold.project_name ]]</span>
        <h1 class="hero-title">[[ scaffold.tagline ]]</h1>
        <div class="hero-text">
            {{ index.content_html|safe }}
        </div>
        <div class="wa-cluster wa-gap-m">
            <wa-button href="/about/" variant="primary" size="large">
                Learn More
                <wa-icon slot="suffix" name="arrow-right"></wa-icon>
            </wa-button>
            <wa-button href="/contact/" size="large" outline>
                Get In Touch
            </wa-button>
        </div>
    </div>
</section>

{# Features Section #}
{% if index.leaves %}
<section class="features-section">
    <div class="section-content wa-stack wa-gap-xl">
        <div class="section-header wa-stack wa-gap-s wa-align-items-center">
            <span class="section-label">Why Choose Us</span>
            <h2 class="section-title">What We Offer</h2>
        </div>
        <div class="wa-grid wa-gap-xl" style="--min-column-size: 300px;">
            {% for item in index.leaves %}
            <wa-card appearance="outlined" class="feature-card">
                <div slot="header" class="feature-header">
                    <div class="feature-icon">
                        <wa-icon name="{{ item.front.get('Icon', 'star') }}"></wa-icon>
                    </div>
                    <h3>{{ item.title }}</h3>
                </div>
                <p>{{ item.content_html|safe }}</p>
            </wa-card>
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}

{# CTA Section #}
<section class="cta-section">
    <div class="cta-content wa-stack wa-gap-l wa-align-items-center">
        <h2>Ready to Get Started?</h2>
        <p>Contact us today to learn how we can help transform your ideas into reality.</p>
        <wa-button href="/contact/" size="large">
            Contact Us
            <wa-icon slot="suffix" name="arrow-right"></wa-icon>
        </wa-button>
    </div>
</section>

{# Navigation to Other Pages #}
<section class="pages-section">
    <div class="section-content wa-stack wa-gap-xl">
        <div class="section-header wa-stack wa-gap-s wa-align-items-center">
            <span class="section-label">Explore</span>
            <h2 class="section-title">Learn More About Us</h2>
        </div>
        <div class="wa-grid wa-gap-l" style="--min-column-size: 280px;">
            {% for branch in root.branches %}
            <wa-card appearance="filled" class="page-card">
                <div slot="header">
                    <h3>{{ branch.title }}</h3>
                </div>
                <p>{{ branch.front.get('Description', '') }}</p>
                <div slot="footer">
                    <wa-button href="{{ branch.path }}/" appearance="plain">
                        Explore
                        <wa-icon slot="suffix" name="arrow-right"></wa-icon>
                    </wa-button>
                </div>
            </wa-card>
            {% endfor %}
        </div>
    </div>
</section>

{% endblock %}
